@using Proyecto_ClubDeportes.ViewModels;

@model PartnerCreateViewModel;

@{
    ViewData["Title"] = "Create";
    var sportList = (List<SportViewModel>) ViewData["Sports"];
}

<h1>Ingresar Nuevo Socio</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label text-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Years" class="control-label text-bold"></label>
                <input asp-for="Years" class="form-control" />
                <span asp-validation-for="Years" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label text-bold"></label>
                <select asp-for="Gender" class="form-control">
                    <option>Seleccione</option>
                    <option value="0">Femenino</option>
                    <option value="1">Masculino</option>
                    <option value="2">No Binario</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberPhone" class="control-label text-bold"></label>
                <input asp-for="NumberPhone" class="form-control" />
                <span asp-validation-for="NumberPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label text-bold"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label text-bold"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group text-bold">
                @foreach (var sport in sportList)
                {
                    <input type="checkbox" name="SportIds" value="@sport.Id"/> @sport.Activity <br />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Nuevo Socio" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista de Socios</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
