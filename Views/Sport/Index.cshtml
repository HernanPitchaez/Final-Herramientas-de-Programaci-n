@using Proyecto_ClubDeportes.ViewModels;

@model SportViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1>Deportes</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Deporte</a>
</p>
<form method="get" asp-action="Index" asp-controller="Sport">
    <input asp-for="Filter" class="form-group col-md-3" placeholder="Busqueda por deporte y descripción">
    <button type="submit" class="btn btn-secondary">Buscar</button>
</form>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Activity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Cantidad de Participantes
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sports) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Partners.Count)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Datos de Deporte</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('¿Estás seguro de que deseas eliminar este deporter?')">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
