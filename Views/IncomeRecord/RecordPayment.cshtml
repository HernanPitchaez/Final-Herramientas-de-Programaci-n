@using Proyecto_ClubDeportes.ViewModels;

@model IncomeRecordCreateVM;

@{
    ViewData["Title"] = "RecordPayment";
    var sports = ViewData["Sports"] as List<SportViewModel>;
}

<h1>Ingreso de Registro de Pago</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RecordPayment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PartnerId" />
            <input type="hidden" asp-for="MembershipFee" />
            <input type="hidden" asp-for="TotalPrice" />
            <div class="form-group">
                <label asp-for="PartnerName" class="control-label text-bold"></label>
                <p class="form-control-static text-bold">@Model.PartnerName</p>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptNumber" class="control-label text-bold"></label>
                <input asp-for="ReceiptNumber" class="form-control" />
                <span asp-validation-for="ReceiptNumber" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Date" class="control-label text-bold"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentType" class="control-label text-bold"></label>
                <select asp-for="PaymentType" class="form-control">
                    <option>Seleccione</option>
                    <option value="0">Efectivo</option>
                    <option value="1">Transferencia</option>
                    <option value="2">Tarjeta</option>
                    <option value="3">Otro</option>
                </select>
                <span asp-validation-for="PaymentType" class="text-danger"></span>
            </div>
            
                @foreach (var sport in sports)
                {
                    <div class="form-group text-bold">
                        <label>Sport</label>
                        <p>@sport.Activity: @sport.Price</p>
                    </div>
                }
            
            <div class="form-group text-bold">
                <label asp-for="MembershipFee" class="control-label"></label>
                <p class="form-control-static">@Model.MembershipFee</p>
            </div>
            
            <div class="form-group text-bold">
                <label asp-for="TotalPrice" class="control-label"></label>
                <p class="form-control-static">@Model.TotalPrice</p>
            </div>
            <div class="form-group text-bold">
                <input type="submit" value="RecordPayment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a Lista de Registros</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
